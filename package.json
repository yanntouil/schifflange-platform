{
  "name": "schifflange-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "sites/*",
    "contents/*",
    "packages/features/*",
    "packages/services/*",
    "packages/shared/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"backend,next,dashboard\" --c gray,red,purple \"npm run dev --prefix ./backend\" \"npm run dev --workspace=@sites/schifflange-website\" \"npm run dev --workspace=schifflange-dashboard\"",
    "dev:dashboard": "cd apps/dashboard && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:schifflangeWebsite": "cd sites/schifflange-website && npm run dev",
    "build:dashboard": "bash ./build-dashboard.sh",
    "build:backend": "bash ./build-backend.sh",
    "build:schifflangeWebsite": "bash ./build-schifflange-website.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12"
  },
  "dependencies": {
    "core-js": "^3.45.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}

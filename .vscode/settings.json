{
  // Associe les CSS au mode Tailwind (utile en v4)
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Map des entrypoints CSS (v4) -> dossiers où ils s’appliquent
  "tailwindCSS.experimental.configFile": {
    "apps/dashboard/src/styles/index.css": ["apps/dashboard/**", "packages/**"],
    "sites/schifflange-website/src/app/globals.css": ["sites/schifflange-website/**"]
  },

  // Optionnel : meilleures suggestions dans les strings (JSX, etc.)
  "editor.quickSuggestions": {
    "strings": "on"
  },
  // Import module specifier relative
  "typescript.preferences.importModuleSpecifier": "relative",
  // Limit the number of editors open to 100
  "workbench.editor.limit.value": 100
}
